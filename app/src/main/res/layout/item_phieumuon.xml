<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="#628E90">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_MaPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MaPM"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_TenTVPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten PM"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_TenSach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="5dp"
                android:text="Ten sach"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_TraSach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tra sach"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_giaThuePM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="Tien thue"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_NgayPM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="Ngay"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/img_DelPM"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:src="@drawable/ic_delete"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="#E892C0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Quản lý phiếu mượn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/edt_MaPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Không nhập mã phiếu mượn"/>
        <Spinner
            android:id="@+id/spn_MaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/spn_MaSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày thuê: "
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_giaThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá thuê: "
            android:layout_marginBottom="10dp"/>
        <CheckBox
            android:id="@+id/chk_traSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã trả sách"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/btn_addPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="#026137"
                android:textAllCaps="true"/>

            <Button
                android:id="@+id/btn_huyPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="#2196F3"
                android:textAllCaps="true"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
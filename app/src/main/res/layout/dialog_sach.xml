<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="#E892C0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Quản lý sách"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/edt_MaSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Không nhâp mã sách" />

        <EditText
            android:id="@+id/edt_tenSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên sách"/>

        <EditText
            android:id="@+id/edt_GiaThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập giá thuê"/>
        <Spinner
            android:id="@+id/spn_LoaiSach"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_addSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_weight="1"
            android:backgroundTint="#026137"
            android:layout_marginHorizontal="20dp"
            android:textAllCaps="true"/>
        <Button
            android:id="@+id/btn_huySach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:layout_marginHorizontal="20dp"
            android:textAllCaps="true"/>

    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>